<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!--  注册数据库配置文件  -->
    <properties resource="db.properties"/>

    <!--  注册实体类的全限定类名，可以在StudentMapper.xml使用  -->
    <typeAliases>
        <!--   方式一：手动设置别名   -->
        <!--        <typeAlias type="com.cube.bean.Student" alias="student"/>-->
        <!--    方式二：mybatis会在这个包下搜索需要的JavaBean，自动设置别名，别名命名规则为类名首字母小写    -->
        <package name="com.THU.bean"/>
    </typeAliases>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${jdbc.driver}"/>
                <property name="url" value="${jdbc.url}"/>
                <property name="username" value="${jdbc.user}"/>
                <property name="password" value="${jdbc.password}"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <!--注册映射文件-->
        <mapper resource="com/THU/dao/StudentMapper.xml"/>
        <mapper resource="com/THU/dao/CourseMapper.xml"/>
        <mapper resource="com/THU/dao/TeacherMapper.xml"/>
    </mappers>
</configuration>